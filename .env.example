# ===========================================
# Vite Starter Pack - Environment Variables
# ===========================================
# Copy this file to .env and configure the values

# -------------------------------------------
# Application Settings (Required)
# -------------------------------------------

# Application name displayed in the UI
VITE_APP_NAME="Meu App"

# Base URL of your API (without trailing slash)
VITE_API_BASE_URL="http://localhost:8000"

# URL to your Swagger/OpenAPI specification (for Orval code generation)
VITE_API_SWAGGER_URL="http://localhost:8000/api/documentation"

# -------------------------------------------
# Authentication Storage Keys (Required)
# -------------------------------------------

# Key used to store the JWT token in localStorage/sessionStorage
VITE_TOKEN_STORAGE_KEY="auth_token"

# Key used to store the refresh token
VITE_REFRESH_TOKEN_STORAGE_KEY="refresh_token"

# -------------------------------------------
# WebSocket Configuration (Optional)
# -------------------------------------------
# Required only if using Laravel Echo / Pusher for real-time features

# Pusher/WebSocket app key
# VITE_WS_KEY="your-pusher-key"

# WebSocket host (defaults to localhost)
# VITE_WS_HOST="localhost"

# WebSocket port (defaults to 6001)
# VITE_WS_PORT="6001"

# Secure WebSocket port (defaults to 443)
# VITE_WSS_PORT="443"

# Force TLS connection (true/false, defaults to true in production)
# VITE_WS_FORCE_TLS="false"

# Authentication endpoint for private channels
# VITE_WS_AUTH_ENDPOINT="http://localhost:8000/broadcasting/auth"

# Pusher cluster (e.g., mt1, us2, eu)
# VITE_WS_CLUSTER="mt1"
